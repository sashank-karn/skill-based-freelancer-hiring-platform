<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox spacing="10" alignment="TOP_LEFT" xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.freelancer.AccountSettingsController" styleClass="account-settings-root">
    <!-- Back Button -->
    <HBox alignment="TOP_LEFT" spacing="10">
        <Button text="â¬… Back" onAction="#goBack" style="-fx-background-color: transparent; -fx-text-fill: #3f51b5;" />
    </HBox>

    <!-- Account Settings Section -->
    <Label text="Account Settings" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <!-- Password Update Section -->
    <Label text="Update Password" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
    <TextField fx:id="currentPasswordField" promptText="Current Password" style="-fx-pref-width: 250px;" />
    <PasswordField fx:id="newPasswordField" promptText="New Password" style="-fx-pref-width: 250px;" />
    <PasswordField fx:id="confirmPasswordField" promptText="Confirm New Password" style="-fx-pref-width: 250px;" />
    <Button text="Update Password" onAction="#handleUpdatePassword" />

    <!-- Document Verification Section -->
    <Label text="Document Verification" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
    <Button text="Upload Documents" onAction="#handleDocumentVerification" />
    <Label fx:id="verificationStatusLabel" text="Verification Status: Not Verified" style="-fx-font-size: 12px;" />

    <!-- Skill Management Section -->
    <Label text="Skill Management" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
    <HBox spacing="10">
        <TextField fx:id="skillField" promptText="Enter Skill" style="-fx-pref-width: 250px;" />
        <Button text="Add Skill" onAction="#handleAddSkill" />
        <Button text="Update Skill" onAction="#handleUpdateSkill" />
        <Button text="Delete Skill" onAction="#handleDeleteSkill" />
    </HBox>
    <ListView fx:id="skillListView" style="-fx-pref-height: 150px;" />
</VBox>