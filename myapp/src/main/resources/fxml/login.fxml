<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml" fx:controller="com.freelancer.LoginController">
    <!-- Error Message Label -->
    <Label fx:id="errorLabel" text="" style="-fx-text-fill: red; -fx-font-size: 12px;" visible="false" />

    <!-- Login Form -->
    <TextField fx:id="emailField" promptText="Email" />
    <PasswordField fx:id="passwordField" promptText="Password" />
    <ComboBox fx:id="roleBox" promptText="Select Role" />
    <Button fx:id="loginButton" text="Login" onAction="#handleLogin" />
    <Hyperlink text="Register" onAction="#goToRegister" />
</VBox>